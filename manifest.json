{
  "manifest_version": 3,
  "name": "Lockdown Password Manager",
  "version": "1.2.0",
  "description": "Advanced password manager with intelligent suggestions, auto-save, and gamified security learning",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "password-assistant.js", "gamification.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lockdown Password Manager - Quiz & Leaderboard Available!",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png", 
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}